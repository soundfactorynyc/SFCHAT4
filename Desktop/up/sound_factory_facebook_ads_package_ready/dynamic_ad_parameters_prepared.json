{
  "dynamic_parameters": {
    "active_visitors": {
      "api_endpoint": "https://seance.soundfactorynyc.com/api/site-activity",
      "data_field": "activeVisitors",
      "fallback_value": "145",
      "refresh_interval": 300,
      "format": "number"
    },
    "tables_remaining": {
      "api_endpoint": "https://seance.soundfactorynyc.com/api/inventory",
      "data_field": "tablesRemaining",
      "fallback_value": "7",
      "refresh_interval": 300,
      "format": "number"
    },
    "tickets_remaining": {
      "api_endpoint": "https://seance.soundfactorynyc.com/api/inventory",
      "data_field": "ticketsRemaining",
      "fallback_value": "123",
      "refresh_interval": 300,
      "format": "number"
    },
    "recent_purchase": {
      "api_endpoint": "https://seance.soundfactorynyc.com/api/recent-activity",
      "data_field": "recentPurchases[0].item",
      "fallback_value": "VIP Table",
      "refresh_interval": 60,
      "format": "string"
    },
    "countdown": {
      "target_date": "2025-11-01T20:00:00-04:00",
      "timezone": "America/New_York",
      "format": "countdown",
      "components": [
        "days",
        "hours",
        "minutes",
        "seconds"
      ]
    }
  },
  "ad_customization": {
    "urgency_thresholds": {
      "high_urgency": {
        "tables_remaining": 5,
        "tickets_remaining": 50,
        "days_remaining": 3,
        "message": "Almost sold out! Only {{tables_remaining}} VIP tables left."
      },
      "medium_urgency": {
        "tables_remaining": 10,
        "tickets_remaining": 100,
        "days_remaining": 7,
        "message": "Limited availability! Reserve your spot now."
      },
      "low_urgency": {
        "tables_remaining": 20,
        "tickets_remaining": 200,
        "days_remaining": 14,
        "message": "Tickets now available for our next event."
      }
    },
    "social_proof_variants": [
      "Someone just purchased {{recent_purchase}} - secure yours now!",
      "{{recent_purchase}} just purchased - don't miss out!",
      "Hot item: {{recent_purchase}} is selling fast!"
    ],
    "activity_variants": [
      "{{active_visitors}} people are viewing Sound Factory right now",
      "Join {{active_visitors}} others exploring Sound Factory",
      "{{active_visitors}} people are planning their Sound Factory experience"
    ]
  },
  "facebook_dynamic_creative": {
    "enabled": true,
    "components": {
      "headlines": [
        "Sound Factory Returns to NYC",
        "The Legend is Back - Sound Factory NYC",
        "Experience Sound Factory in 2025"
      ],
      "descriptions": [
        "The legendary club that defined NYC nightlife",
        "Tables, tickets, and unforgettable experiences",
        "Don't miss the return of a nightlife icon"
      ],
      "images": [
        "sound_factory_image1.jpg",
        "sound_factory_image2.jpg",
        "sound_factory_image3.jpg"
      ],
      "videos": [
        "sound_factory_video1.mp4",
        "sound_factory_video2.mp4"
      ],
      "call_to_actions": [
        "Get Tickets",
        "Reserve Now",
        "Learn More"
      ]
    }
  },
  "tracking_parameters": {
    "utm_source": "facebook",
    "utm_medium": "social",
    "utm_campaign": "dynamic_ad",
    "fb_pixel_id": "987654321098765",
    "custom_event": "FacebookAdEntry"
  }
}